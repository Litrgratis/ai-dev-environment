{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node"],
    "isolatedModules": true,
    "allowJs": true
  },
  "include": ["src", "tests", "server.ts"],
  "exclude": ["node_modules", "dist"]
}
